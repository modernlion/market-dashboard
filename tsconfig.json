{
	"compilerOptions": {
		"lib": ["dom", "dom.iterable", "esnext"],
		"target": "es2016",
		"allowJs": true,
		"skipLibCheck": true,
		"strict": true,
		"noEmit": true,
		"esModuleInterop": true,
		"module": "esnext",
		"moduleResolution": "bundler",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"jsx": "preserve",
		"incremental": true,
		"baseUrl": ".",
		"plugins": [
			{
				"name": "next"
			}
		],
		"paths": {
			"@/*": ["./src/*"],
			"@assets/*": ["./public/assets/*"],
			// "@styles/app/*": ["./src/styles/app/*"],
			// "@styles/common/*": ["./src/styles/common/*"],
			// "@styles/components/atom/*": ["./src/styles/components/atom/*"],
			// "@styles/components/molecule/*": ["./src/styles/components/molecule/*"],
			// "@styles/components/template/*": ["./src/styles/components/template/*"]
			"@styles/components/*": ["./src/styles/components/*"]
		}
	},
	"include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts", "public/assets/icons/IcLogoKonkrit.js"],
	"exclude": ["node_modules"]
}
